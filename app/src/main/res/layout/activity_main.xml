<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
              android:id="@+id/editDisplay"
              android:layout_width="match_parent"
              android:layout_height="160dp"
              android:layout_marginTop="@dimen/marginSmall"
              android:layout_marginLeft="@dimen/marginSmall"
              android:layout_marginRight="@dimen/marginSmall"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:orientation="vertical"
                  android:layout_margin="@dimen/marginSmall">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/marginSmall"
                      android:layout_marginLeft="@dimen/marginSmall"
                      android:layout_marginRight="@dimen/marginSmall"
                      android:weightSum="8"
        >
            <Button android:id="@+id/button_one"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_one"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_two"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_two"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_three"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_three"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_divide"
                    android:layout_width="wrap_content"
                    android:text="@string/button_divide"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_height="75dp"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/marginSmall"
                      android:layout_marginLeft="@dimen/marginSmall"
                      android:layout_marginRight="@dimen/marginSmall"
                      android:weightSum="8"
        >
            <Button android:id="@+id/button_four"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_four"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_five"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_five"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_six"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_six"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_minus"
                    android:layout_width="wrap_content"
                    android:text="@string/button_minus"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_height="75dp"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/marginSmall"
                      android:layout_marginLeft="@dimen/marginSmall"
                      android:layout_marginRight="@dimen/marginSmall"
                      android:weightSum="8"
        >
            <Button android:id="@+id/button_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_seven"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_eight"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_nine"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_nine"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_plus"
                    android:layout_width="wrap_content"
                    android:text="@string/button_sum"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_height="75dp"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/marginSmall"
                      android:layout_marginLeft="@dimen/marginSmall"
                      android:layout_marginRight="@dimen/marginSmall"
                      android:weightSum="8"
        >
            <Button android:id="@+id/button_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_clear"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_zero"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_zero"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="@string/button_dot"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_marginRight="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

            <Button android:id="@+id/button_equal"
                    android:layout_width="wrap_content"
                    android:text="@string/button_equal"
                    android:textSize="@dimen/buttonTextSize"
                    android:layout_height="75dp"
                    app:fontFamily="sans-serif"
                    android:onClick="operationFunction"
                    android:layout_weight="2"
            />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>